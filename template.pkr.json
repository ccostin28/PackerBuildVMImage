source "azure-arm" "prerequisite-layer" {
  client_id                    = var.client_id
  client_secret                = var.client_secret
  subscription_id              = var.subscription_id
  tenant_id                    = var.tenant_id
  managed_image_resource_group_name = var.resource_group_name
  managed_image_name           = "prerequisite-layer-image"
  os_type                      = "Windows"
  image_publisher              = "MicrosoftWindowsServer"
  image_offer                  = "WindowsServer"
  image_sku                    = "2019-Datacenter"
  communicator                 = "winrm"
  winrm_username               = "packer"
  winrm_use_ssl                = true
  winrm_insecure               = true
}

source "azure-arm" "application-layer" {
  client_id                    = var.client_id
  client_secret                = var.client_secret
  subscription_id              = var.subscription_id
  tenant_id                    = var.tenant_id
  managed_image_resource_group_name = var.resource_group_name
  managed_image_name           = "application-layer-image"
  source_image_resource_group_name = var.resource_group_name
  source_image_name            = source.azure-arm.prerequisite-layer.managed_image_name
  os_type                      = "Windows"
  communicator                 = "winrm"
  winrm_username               = "packer"
  winrm_use_ssl                = true
  winrm_insecure               = true
}

provisioner "file" {
  source      = "path/to/your/HelloWorldApp"
  destination = "C:/inetpub/wwwroot/HelloWorldApp"
}

provisioner "powershell" {
  script = "scripts/install-application.ps1"
  tags   = ["application"]
}
